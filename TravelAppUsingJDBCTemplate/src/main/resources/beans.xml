<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/SRC_Travel_Agency"/>
        <property name="username" value="root"/>
        <property name="password" value="AFZAL@1234"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    
     <bean id="passengerDetailsDAO" class="com.spring.dao.PassengerDetailsDAO">
        <constructor-arg name="" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="passengerService" class="com.spring.service.PassengerService">
        <constructor-arg ref="passengerDetailsDAO"/>
    </bean>

</beans>